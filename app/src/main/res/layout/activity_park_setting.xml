<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGray"
    tools:context=".parking_place_account_activities.ParkSettings.ParkSetting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@color/backgroundDefault">



                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:src="@drawable/ic_parking"/>

                <TextView
                    android:id="@+id/txtFullNamede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="John Doe"/>

                <ImageButton
                    android:id="@+id/btnEditProfilePicturede"
                    android:layout_height="30dip"
                    android:layout_width="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_add_a_photo_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@color/backgroundDefault">

                <TextView
                    android:id="@+id/profileHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-thin"
                    android:text="Personal Information" />


                <TextView
                    android:id="@+id/idde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="National Id"/>


                <TextView
                    android:id="@+id/Emailde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Email: john.doe@gmail.com"/>


                <TextView
                    android:id="@+id/Phonede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Phone: 4162354874"/>
                <TextView
                    android:id="@+id/ParkingSizede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ParkSize: 4162354874"/>
                <TextView
                    android:id="@+id/addressde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Adress: 4162354874"/>
                <TextView
                    android:id="@+id/Parkownerde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Phone: 4162354874"/>
                <TextView
                    android:id="@+id/licensekeyde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="License: 4162354874"/>
                <TextView
                    android:id="@+id/Resourcede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Park-Type : Roof"/>

                <!--<Spinner-->
                    <!--android:id="@+id/Resourcede"-->
                    <!--android:layout_width="325dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_above="@+id/buttonAddTractor"-->
                    <!--android:layout_alignParentStart="true"-->
                    <!--android:entries="@array/Parkingtype"-->
                    <!--android:layout_alignParentLeft="true"></Spinner>-->
                <TextView
                    android:id="@+id/datePicker1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Opening Time:9:10PM"/>
                <TextView
                    android:id="@+id/datePicker2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Closing Time: 8:20AM"/>

                <!--<TimePicker-->
                    <!--android:id="@+id/datePicker1"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:timePickerMode="spinner"/>-->
                <!--<TimePicker-->
                    <!--android:id="@+id/datePicker2"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:timePickerMode="spinner"/>-->



                <ImageButton
                    android:id="@+id/btnEditProfilede"
                    android:layout_height="30dip"
                    android:layout_width="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_edit_black_24dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@color/backgroundDefault">

                <TextView
                    android:id="@+id/profileHeading2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-thin"
                    android:text="Account Information" />


                <TextView
                    android:id="@+id/passwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Password: xxxxxxx"/>
                <ImageButton
                    android:id="@+id/btnchangepass"
                    android:layout_height="30dip"
                    android:layout_width="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_edit_black_24dp" />


                <TextView
                    android:id="@+id/deleteAc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Press this to delete Account"/>



                <ImageButton
                    android:id="@+id/btndeleteAccount"
                    android:layout_height="30dip"
                    android:layout_width="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_delet" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@color/backgroundDefault">

                <TextView
                    android:id="@+id/profileHeading3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-thin"
                    android:text="Location Information" />
                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

                <TextView
                    android:id="@+id/ChangeLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Press this to Park Location"/>
                <TextView
                    android:id="@+id/ChangeLocNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="3dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Note: You must be at the parking Place"/>

                <ImageButton
                    android:id="@+id/btnchangeLoc"
                    android:layout_height="30dip"
                    android:layout_width="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_location" />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>

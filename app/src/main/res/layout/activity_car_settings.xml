<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGray"
    tools:context=".settings.CarSettings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@color/backgroundDefault">



                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:src="@drawable/ic_car"/>

                <TextView
                    android:id="@+id/txtFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="Benz 8"/>

                <ImageButton
                    android:id="@+id/btnEditProfilePicture"
                    android:layout_height="30dip"
                    android:layout_width="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_add_a_photo_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@color/backgroundDefault">

                <TextView
                    android:id="@+id/profileHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-thin"
                    android:text="Car Information" />


                <TextView
                    android:id="@+id/cmodel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="model: fiat"/>

                <TextView
                    android:id="@+id/cmake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Make: Toyota"/>
                <TextView
                    android:id="@+id/cColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Color: blue"/>
                <TextView
                    android:id="@+id/Regno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="REG No: KBA  803Y"/>



                <ImageButton
                    android:id="@+id/btnEditProfile"
                    android:layout_height="30dip"
                    android:layout_width="30dip"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_edit_black_24dp" />



            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>
